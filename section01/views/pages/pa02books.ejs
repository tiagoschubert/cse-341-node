<!DOCTYPE html>
<html>

<head>
    <% include ../includes/header.ejs %>
</head>

<body>
    <% include ../includes/nav.ejs %>
        <div class="jumbotron text-center pb-30">
            <div class="container">
                <h1>
                    <%= title %>
                </h1>
                <p>List of Books</p>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <% books.forEach(book=> { %>
                    <div class="col-12 col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    <%= book.title %>
                                </h3>
                            </div>
                            <div class="panel-body">
                                <%= book.summary %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
</body>

</html>